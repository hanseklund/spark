<phpunit>
  <testsuites>
    <testsuite name="Spark">
      <directory suffix="Test.php">./tests/cbednarski/Spark/</directory>
    </testsuite>
  </testsuites>
  <filter>
    <blacklist>
      <directory suffix=".php">./vendor/</directory>
    </blacklist>
    <whitelist processUncoveredFilesFromWhitelist="true">
      <directory suffix=".php">./cbednarski/Spark/</directory>
      <exclude>
        <directory suffix=".php">./cbednarski/Spark/Resources/</directory>
      </exclude>
    </whitelist>
  </filter>
</phpunit>
